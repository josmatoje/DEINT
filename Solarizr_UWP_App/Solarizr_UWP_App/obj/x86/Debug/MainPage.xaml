<Page
    x:Class="Solarizr_UWP_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Solarizr_UWP_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#B48C7A">

    <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray">
        <Grid BorderBrush="Black" BorderThickness="1" CornerRadius="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30" />
                <RowDefinition Height="30"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100"/>
                <ColumnDefinition MinWidth="150"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="SOLARIZE" FontSize="20" FontFamily="Courier"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2"/>
            <TextBlock x:ConnectionId='2' x:Name="user" Margin="5" Text="Usuario:" Grid.Row="1" Grid.Column="0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>
            <TextBlock x:ConnectionId='3' x:Name="password" Margin="5" Text="Contraaseña:" Grid.Row="2" Grid.Column="0"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5"/>
            <Button x:ConnectionId='4' x:Name="Enter" CornerRadius="10" BorderBrush="DarkGray" Background="DimGray" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center">Login</Button>
        </Grid>
    </RelativePanel>
</Page>

