<Page
    x:Class="Solarizr_UWP_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Solarizr_UWP_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#403232">

    <RelativePanel >
        <Grid x:ConnectionId='2' x:Name="tablilla" HorizontalAlignment="Stretch" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" 
              Margin="100,150,100,0" BorderBrush="#707070" BorderThickness="2" CornerRadius="3" Background="White" Opacity="0.7">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40" />
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" MaxWidth="300"/>
                <ColumnDefinition MinWidth="100" MaxWidth="300"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="SOLARIZE" FontSize="20" FontFamily="Courier"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2"/>
            <TextBlock x:ConnectionId='4' x:Name="user" Margin="8" Text="Usuario:" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:ConnectionId='5' x:Name="userData" Text="" Grid.Row="1" Grid.Column="1" Margin="8" Padding="0"/>
            <TextBlock x:ConnectionId='6' x:Name="password" Margin="8" Text="Contraseña:" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0"/>
            <PasswordBox x:ConnectionId='7' x:Name="passwordData" Password="" Grid.Row="2" Grid.Column="1" Margin="8" Padding="0"/>
            <Button x:ConnectionId='8' x:Name="Enter" CornerRadius="10"                     BorderBrush="#707070" Background="White" Grid.Row="3" Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" >Login</Button>
        </Grid>
        <StackPanel Background="IndianRed" BorderBrush="Black" BorderThickness="1" CornerRadius="4" 
                    RelativePanel.Below="tablilla" RelativePanel.AlignHorizontalCenterWith="tablilla" Margin="50,20">
            <TextBlock x:ConnectionId='3' x:Name="Alerta" Text="El usuario o la contraseña no son validos o no coinciden, intentelo de nuevo." FontSize="12" Foreground="Wheat" Margin="5" 
                       Visibility="Collapsed" TextWrapping="Wrap" TextAlignment="Justify"/>
        </StackPanel>
    </RelativePanel>
</Page>

