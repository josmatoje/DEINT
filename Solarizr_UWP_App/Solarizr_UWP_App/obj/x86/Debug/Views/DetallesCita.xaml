<Page
    x:Class="Solarizr_UWP_App.Views.DetallesCita"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cita="using:Solarizr_UWP_App.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#403232">
    <Page.DataContext>
        <cita:clsCita/>
    </Page.DataContext>

    <RelativePanel Padding="20">
        <AppBarButton x:ConnectionId='2' x:Name="back" Icon="Back"                    Foreground="White" />
        <StackPanel x:ConnectionId='3' x:Name="datosPrincipales" Orientation="Horizontal" Margin="10" RelativePanel.RightOf="back" RelativePanel.AlignBottomWith="back" RelativePanel.AlignRightWithPanel="True">
            <TextBlock x:ConnectionId='10' x:Name="num" Text="Nº " Foreground="White" FontSize="20"/>
            <TextBlock x:ConnectionId='11' x:Name="idCita" Text="{Binding IdCitas}" Foreground="White" FontSize="20" Margin="0,0,50,0"/>
            <TextBlock x:ConnectionId='12' x:Name="nombreCita" Text="{Binding Direccion}"  Foreground="White" FontSize="20"/>
        </StackPanel>
        <Rectangle x:ConnectionId='4' x:Name="linea" Fill="White" Height="2" RelativePanel.Below="datosPrincipales" RelativePanel.AlignLeftWith="back" RelativePanel.AlignRightWith="datosPrincipales"/>
        
        
        
        
        <Grid x:ConnectionId='5' x:Name="tablilla" HorizontalAlignment="Stretch" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" 
              Margin="100,150,100,0" BorderBrush="#707070" BorderThickness="2" CornerRadius="3" Background="White" Opacity="0.7">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40" />
                <RowDefinition Height="40"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="100" MaxWidth="300"/>
                <ColumnDefinition MinWidth="100" MaxWidth="300"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="SOLARIZE" FontSize="20" FontFamily="Courier"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2"/>
            <TextBlock x:ConnectionId='6' x:Name="user" Margin="8" Text="Usuario:" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0"/>
            <TextBox x:ConnectionId='7' x:Name="userData" Text="" Grid.Row="1" Grid.Column="1" Margin="8" Padding="0"/>
            <TextBlock x:ConnectionId='8' x:Name="password" Margin="8" Text="Contraseña:" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0"/>
            <PasswordBox x:ConnectionId='9' x:Name="passwordData" Password="" Grid.Row="2" Grid.Column="1" Margin="8" Padding="0"/>
            
        </Grid>
    </RelativePanel>
</Page>

