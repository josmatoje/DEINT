<Page
    x:Class="DEINT_11_Ejercicio1_UWP_UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DEINT_11_Ejercicio1_UWP_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <ListView ItemsSource="{x:Bind ViewModel.ListadoPersonas}" SelectedItem="{x:Bind ViewModel.OPersonaSeleccionada, Mode=TwoWay}" x:Name="listViewPersonas"  RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Nombre}" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Apellidos}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Eliminar" Click="{x:Bind ViewModel.EliminarPersonaClick}" RelativePanel.RightOf="listViewPersonas"/>
    </RelativePanel>
</Page>
