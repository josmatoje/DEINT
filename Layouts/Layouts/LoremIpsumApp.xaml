        <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="5" VerticalAlignment="Bottom">
            <TextBlock x:Name="txtBox2" TextWrapping="Wrap" Margin="5" TextAlignment="Justify"/>
        </Border>
