<Page
    x:Class="U9_Ejercicio1_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U9_Ejercicio1_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Choose" Margin="20"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical"  Margin="20">
            <Button Content="Cancel"/>
            <Button Content="Default"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical"  Margin="20" >
            <RadioButton Content="✔ Yes" Foreground="Green"/>
            <RadioButton Content="No" Foreground="Red"/>
            <RadioButton Content="Maybe"/>
            <Button Content="Go"/>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="3" Content="Hello" Margin="20" VerticalAlignment="Top" />
        <Pivot Grid.Row="1" Grid.Column="0" Margin="10">
            <PivotItem Header="Ecomnomía 🏠">
                <StackPanel>
                    <CheckBox Content="Setting one"/>
                    <CheckBox Content="Setting two"/>
                    <CheckBox Content="Setting three"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Tab two">
                <StackPanel>
                    <CheckBox Content="cosa one"/>
                    <CheckBox Content="cosa two"/>
                    <CheckBox Content="cosa three"/>
                    <CheckBox Content="thing cuatro"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Tab three">
                <StackPanel>
                    <CheckBox Content="Fernando"/>
                    <CheckBox Content="apruebame"/>
                    <CheckBox Content="por favor"/>
                    <CheckBox Content="te lo suplico"/>
                </StackPanel>
            </PivotItem>
        </Pivot>
        <TextBox Grid.Row="1" Grid.Column="2" Margin="20" AcceptsReturn="True" IsSpellCheckEnabled="True" MinHeight="20"/>
        <PasswordBox Grid.Row="1" Grid.Column="3" Margin="20"  AutomationProperties.Name="Simple PasswordBox"/>
        <ListBox Grid.Row="2" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <ListBoxItem Content="Green"/>
            <ListBoxItem Content="Blue"/>
            <ListBoxItem Content="Yellow"/>
            <ListBoxItem Content="Red"/>
            <ListBoxItem Content="Violet"/>
            <ListBoxItem Content="Green"/>
            <ListBoxItem Content="Blue"/>
            <ListBoxItem Content="Yellow"/>
            <ListBoxItem Content="Red"/>
            <ListBoxItem Content="Violet"/>
        </ListBox>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="20" PlaceholderText="Seleccione">
            <x:String>Pedro</x:String>
            <x:String>Pablo</x:String>
            <x:String>Paco</x:String>
            <x:String>Psanti</x:String>
            <x:String>Pfernando</x:String>
            <x:String>Pangel</x:String>
        </ComboBox>
        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="50" >
            <Slider x:ConnectionId='2' x:Name="sldrProgres" AutomationProperties.Name="Slider with ticks" TickFrequency="10" TickPlacement="BottomRight"/>
            <ProgressBar Value="{Binding  ElementName=sldrProgres, Path=Value}" Width="200" Height="30" HorizontalAlignment="Right" Margin="30"/>
        </StackPanel>
        <CalendarView Grid.Row="3" Grid.Column="0"/>
        <CalendarDatePicker Grid.Row="3" Grid.Column="1" />
        <DatePicker Grid.Row="3" Grid.Column="2"/>
        <StackPanel Grid.Row="3" Grid.Column="3">
            <Button Content="Make reservation" Margin="20"/>
            <Button Content="Validae Datepicker" Margin="20"/>
        </StackPanel>


    </Grid>
</Page>

