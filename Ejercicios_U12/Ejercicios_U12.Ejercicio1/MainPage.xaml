<Page
    x:Class="Ejercicios_U12.Ejercicio1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ejercicios_U12.Ejercicio1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="PlataOro">
                <GradientStop Offset="0" Color="Silver"/>
                <GradientStop Offset="1" Color="Orange"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Page.Resources>

    <RelativePanel>
        <Rectangle x:Name="rectangulo" Height="300" Width="700" Fill="{StaticResource Aguaverde}" Margin="30"/>
        <Ellipse x:Name="elise" Height="300" Width="700" Fill="{StaticResource PlataOro}" Margin="30" RelativePanel.Below="rectangulo"/>
    </RelativePanel>
</Page>
