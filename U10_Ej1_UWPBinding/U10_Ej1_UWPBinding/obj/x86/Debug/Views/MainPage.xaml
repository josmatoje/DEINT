<Page
    x:Class="U10_Ej1_UWPBinding.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:U10_Ej1_UWPBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <Slider x:ConnectionId='2' x:Name="sldSize" Value="10" TickFrequency="1" Minimum="1" TickPlacement="Outside" Maximum="300" Width="400" Margin="20" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True"/>
        <TextBlock x:ConnectionId='3' x:Name="txtText" Text="Simple Text" FontSize="{Binding ElementName=sldSize, Path=Value}" RelativePanel.Below="sldSize" RelativePanel.AlignBottomWith="txtSize"/>
        <TextBox x:ConnectionId='4' x:Name="txtSize" Height="200" Width="400" Text="{Binding ElementName=sldSize, Mode=TwoWay, Path=Value, UpdateSourceTrigger=PropertyChanged}" RelativePanel.AlignBottomWithPanel="True"/>
    </RelativePanel>
</Page>

